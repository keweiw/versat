<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <package name="transition-action" namespace="/employee" extends="versat">
        <action name="showtransition" class="com.action.TransitionAction" method="showTransition">
            <result>/pages/transition.jsp</result>
        </action>
        <action name="generate" class="com.action.TransitionAction" method="transition">
            <result name="error">/pages/transition.jsp</result>
            <result name="success">/pages/transition.jsp</result>     
        </action>
    </package>
    
</struts>
