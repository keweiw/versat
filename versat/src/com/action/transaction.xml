<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <package name="transaction-action" namespace="/employee/trans" extends="versat">
        <action name="list" class="com.action.TransactionAction" method="list">
            <result>/pages/employee-transactionhistory.jsp</result>
        </action>
        <action name="deposit" class="com.action.TransactionAction" method="showDeposit">
            <result>/pages/depositcheck.jsp</result>
        </action>
         <action name="accountdeposit" class="com.action.TransactionAction" method="showDepositByUserId">
            <result>/pages/depositcheck2.jsp</result>
        </action>
    </package>
    <package name="transaction-customer-action" namespace="/customer/trans" extends="versat">
        <action name="list" class="com.action.TransactionAction" method="listSelf">
            <result>/pages/customer-transactionhistory.jsp</result>
        </action>
        <action name="tobuy" class="com.action.TransactionAction" method="showBuy">
            <result>/pages/buyfund.jsp</result>
        </action>
        <action name="tosell" class="com.action.TransactionAction" method="showSell">
            <result>/pages/sellfund.jsp</result>
        </action>
        <action name="withdraw" class="com.action.TransactionAction" method="showWithdraw">
            <result>/pages/withdraw.jsp</result>
        </action>
        <action name="sort" class="com.action.TransactionAction" method="displayByTransactionType">
            <result>/pages/customer-transactionhistory.jsp</result>
        </action>
    </package>
</struts>
